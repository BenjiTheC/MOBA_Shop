<div class="col-md-4 mx-0 pt-1">
  {{#if userInfo}}
  <div class="card pt-3 px-3 col-10 mx-auto user-card" id="{{userInfo.userId}}">

    <div class="card-body p-2 mt-2">
      <a href="/users/{{userInfo.userId}}" style="color: inherit">
        <p class="card-title mb-2 display-4" id="user-name">{{userInfo.userName}}</p>
      </a>
      <p class="card-text mb-2">Asset: <span id="user-asset">{{userInfo.userAsset}}</span> <span
          class="badge badge-pill badge-dark">MBCoin</span>
      </p>
    </div>
  </div>
  <a class="btn btn-dark text-light col-10 d-flex mx-auto mt-2 justify-content-center" href="/items">Sell your goods</a>
  {{/if}}

  <a class="btn btn-dark text-light col-10 d-flex mx-auto mt-2 justify-content-center" href="/cart">
    Check Out&nbsp;&nbsp;
    <span class="icon-class">
      <i class="fas fa-shopping-cart"></i>
      <span class="badge badge-light" id="items-in-cart">
        {{#if itemInCart}}
        {{itemInCart}}
        {{else}}
        0
        {{/if}}
      </span>
    </span>
  </a>
  <div class="row">
    <div class="card col-6 border-0 mt-2" id="tag-lol">
      <img class="card-img-top bg-light" alt="tag-lol" src="/public/img/tag-lol.png">
      <a href="/items/tag/lol" class="stretched-link">
        <p class="text-dark sr-only">Category: League of Legends</p>
      </a>
    </div>

    <div class="card col-6 border-0 mt-2" id="tag-dota">
      <img class="card-img-top bg-light" alt="tag-dota" src="/public/img/tag-dota2.png">
      <a href="/items/tag/dota" class="stretched-link">
        <p class="text-dark sr-only">Category: DoTA</p>
      </a>
    </div>
  </div>

</div>